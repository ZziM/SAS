@using DevExpress.Web.Mvc;
@using System.Web.UI.WebControls;
@using DevExpress.Web;

@functions{

    public static void ApplyDefault(DateEditSettings settings, string name, string caption)
    {
        settings.Name = name;
        settings.Width = Unit.Percentage(100);
        settings.Properties.Caption = caption;
        settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
        settings.Properties.CalendarProperties.FastNavProperties.DisplayMode = FastNavigationDisplayMode.Inline;
    }

}